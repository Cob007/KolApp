<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#181818"
    tools:context=".ui.activities.Fragment.LiveFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go live now"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_marginTop="260dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give us access to the following to go live"
        android:textSize="12sp"
        android:textColor="#C0BEBE"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow access to camera"
        android:textSize="16sp"
        android:textColor="#C0BEBE"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        fontPath="fonts/OpenSans-Bold.ttf"
        tools:ignore="MissingPrefix"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow access to microphone"
        android:textSize="16sp"
        android:textColor="#C0BEBE"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        fontPath="fonts/OpenSans-Bold.ttf"
        tools:ignore="MissingPrefix"
        />
</LinearLayout>